<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:fontFamily="sans-serif-medium"
        android:hint="PRODUCT NAME"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#2B3D4D" />

    <RelativeLayout
        android:id="@+id/layout_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_name">

        <TextView
            android:id="@+id/text_view_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/text_view_price_title"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD" />

        <TextView
            android:id="@+id/text_view_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/text_view_price_title"
            android:layout_toRightOf="@+id/text_view_price_title"
            android:fontFamily="sans-serif"
            android:hint="PRICE"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_price">

        <TextView
            android:id="@+id/text_view_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="sans-serif"
            android:text="@string/text_view_quantity_title"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD" />

        <TextView
            android:id="@+id/text_view_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/text_view_quantity_title"
            android:layout_toRightOf="@+id/text_view_quantity_title"
            android:fontFamily="sans-serif"
            android:hint="QUANTITY"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#AEB6BD" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:focusable="false"
        android:text="SALE"
        android:textColor="@android:color/white" />

</RelativeLayout>